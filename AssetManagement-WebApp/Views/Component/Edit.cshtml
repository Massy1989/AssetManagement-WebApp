@model AssetManagementWebApp.Models.Asset
@{
    ViewData["Title"] = "Components";
    ViewBag.CurrentPage = "Component";
}
<div class="row">
    <div class="col-lg-12">
        <form action="" class="form-horizontal" method="post">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>Edit Component</h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <input asp-for="Id" type="hidden" id="componentId" />
                        <label for="componentName" class="col-sm-1 control-label">Name:</label>
                        <div class="col-sm-11">
                            <input asp-for="Name" type="text" class="form-control" id="componentName" placeholder="Component Name" />
                            @*<span id="helpBlock" class="help-block"></span>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="componentDescription" class="col-sm-1 control-label">Description:</label>
                        <div class="col-sm-11">
                            <textarea asp-for="Description" rows="8" class="form-control" id="componentDescription" placeholder="Description"></textarea>
                            @*<span id="helpBlock" class="help-block"></span>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-1"></div>
                        <div class="col-sm-11">
                            <input class="btn btn-sm btn-success" type="submit" value="Update Component" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>